@model LanguageNew.Models.UserTable 
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_AdminDashBoard.cshtml";
}

<div class="title-block">
    <h3 class="title"> Create </h3>
</div>
    
        <section class="section">
            <div class="row sameheight-container">
                <div class="col-md-12">
                    <div class="card card-block">
                     @using (Html.BeginForm("Create", "Admin", FormMethod.Post, new { @id = "createform", @role = "form" }))
                     {
                            
                            <div class="row form-group">
                                <div class="col-6">
                                    @Html.LabelFor(x=>x.Username,new { @class = "control-label" })
                                    @Html.TextBoxFor(x=>x.Username,new { @class = "form-control underlined", @placeholder = "Please Enter UserName" })
                                  
                                </div>
                                <div class="col-6">
                                    @Html.LabelFor(x => x.Email, new { @class = "control-label" })
                                    @Html.TextBoxFor(x => x.Email, new { @class = "form-control underlined", @placeholder = "Please Enter valid email address" })

                                </div>
                            </div>
                            <div class="row form-group">
                                <div class="col-6">
                                    @Html.LabelFor(x => x.Name, new { @class = "control-label" })
                                    @Html.TextBoxFor(x => x.Name, new { @class = "form-control underlined", @placeholder = "Please Enter Full Name" })
                                </div>
                                <div class="col-6">
                                    @Html.LabelFor(x => x.Address, new { @class = "control-label" })
                                    @Html.TextBoxFor(x => x.Address, new { @class = "form-control underlined", @placeholder = "Please Enter Address" })
                                </div>
                            </div>
                            <div class="form-group pull-left">
                                <button type="submit" class="btn btn-primary">Submit</button>
                            </div>
                     }
                    </div>
                </div>
             
            </div>
        </section>
    
