<!doctype html>
<html class="no-js" lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <title>@ViewBag.Title- My App  </title>
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="apple-touch-icon" href="apple-touch-icon.png">
    <!-- Place favicon.ico in the root directory -->
    <link rel="stylesheet" href="~/Content/appcss/vendor.css">
    <!-- Theme initialization -->
    <script>
            var themeSettings = (localStorage.getItem('themeSettings')) ? JSON.parse(localStorage.getItem('themeSettings')) : {};
            var themeName = themeSettings.themeName || '';
            if (themeName)
            {
                document.write('<link rel="stylesheet" id="theme-style" href="/Content/appcss/app-' + themeName + '.css">');
            }
            else
            {
                document.write('<link rel="stylesheet" id="theme-style" href="/Content/appcss/app.css">');
            }
    </script>
</head>
<body>
    <div class="main-wrapper">
        <div class="app " id="app">
            <header class="header">
                @Html.Partial("_header")
            </header>
            <!-- Move this to navigation partial render  -->
            <aside class="sidebar">
                @Html.Partial("_sidenavbar")
            </aside>
            <div class="sidebar-overlay" id="sidebar-overlay"></div>
            <div class="sidebar-mobile-menu-handle" id="sidebar-mobile-menu-handle"></div>
            <div class="mobile-menu-handle"></div>
            <article class="content screenful-page">
             @Html.Partial("_ErrorMessagePartial")
             @RenderBody()
            </article>
           @Html.Partial("_footer")
        </div>
    </div>
    <!-- Reference block for JS -->
    <div class="ref" id="ref">
        <div class="color-primary"></div>
        <div class="chart">
            <div class="color-primary"></div>
            <div class="color-secondary"></div>
        </div>
    </div>
    <script>

    </script>
    <script src="~/Scripts/appjs/vendor.js"></script>
    <script src="~/Scripts/appjs/app.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>